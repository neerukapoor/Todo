const express = require('express');
const router = express.Router();

let todos = ["hello", "yoi"];
router.get("/", (req,res)=>{
    res.render('index', {todos});
})

router.post("/", (req,res) => {
    let newItem = req.body.todo;
    todos.push(newItem)
    res.redirect("/");
})

router.get("/signup", (req,res) => {
    res.render('signup', {
        mySecretKey: process.env.GOOGLE_CLIENT_ID
    });
})

module.exports = router;